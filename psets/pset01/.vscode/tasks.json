{
	"version": "2.0.0",
	"tasks": [
		{   // print workspace folder name
			"type": "shell",
			"label": "print workspaceFolder",
			"command": "${workspaceFolder}",
			"problemMatcher": []
		},
		{   // build hellowho
			"type": "cppbuild",
			"label": "build hellowhox",
			"command": "C:/msys64/mingw64/bin/g++.exe",
			"args": [
				"-g", "${cwd}/hellowhox.cpp",
				"-o", "${cwd}/hellowhox"
			],
			"options": {
				"cwd": "C:/msys64/mingw64/bin"
			},
			"problemMatcher": [ "$gcc" ],
			"group": "build",
			"detail": "compiler: C:/msys64/mingw64/bin/g++.exe"
		},
		{   // run hellowho without arguments
			"command": "${cwd}/hellowhox",
			"label": "run hellowho without arguments",
			"type": "shell",
			"args": [],
			"dependsOn": [ "build hellowho" ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [ "$gcc" ]
		}, 
		{   // run hellowho with arguments
			"command": "${cwd}/hellowhox",
			"label": "run hellowho with arguments",
			"type": "shell",
			"args": [ "john", "kim", "david" ],
			"dependsOn": [ "build hellowho" ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [ "$gcc" ]
		}
	]
}