{
	"version": "2.0.0",
	"tasks": [
		{   // print workspace folder name
			"type": "shell",
			"label": "print workspaceFolder",
			"command": "${workspaceFolder}",
			"problemMatcher": []
		},
		{   // build hellowho
			"type": "cppbuild",
			"label": "build hellowho",
			"command": "C:/msys64/mingw64/bin/g++.exe",
			"args": [
				"-g", "${cwd}/hellowho.cpp",
				"-o", "${cwd}/hellowho.exe"
			],
			"problemMatcher": [ "$gcc" ],
			"group": "build",
			"detail": "compiler: C:/msys64/mingw64/bin/g++.exe"
		},
		{   // run hellowho without arguments
			"command": "${cwd}/hellowho.exe",
			"label": "run hellowho",
			"type": "shell",
			"args": [],
			"dependsOn": [ "build hellowho" ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [ "$gcc" ]
		}, 
		{   // run hellowho with arguments
			"command": "${cwd}/hellowho.exe",
			"label": "run hellowho",
			"type": "shell",
			"args": [
				"john",
				"kim",
				"david"
			],
			"dependsOn": [ "build hellowho" ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [ "$gcc" ]
		}
	]
}